def perfect_numbers(N):  #user-defined function
   sum = 0
   for i in range(1,N): 
      if(N%i == 0):
         sum = sum+i 
   return sum 

# take inputs
N = 6

# check perfect number or not
if(N == perfect_numbers(N)): 
   print(N, "is a perfect number") 
else: 
   print(N, "is not a perfect number")
